<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Michroma&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a0c0bb4f74.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="./stylesheets/navbar.css">
    <link rel="stylesheet" href="./stylesheets/registro.css">

    <title>Registro</title>
</head>

<body>
    
    <!-- Navbar -->

    <%- include('partials/navbar.ejs') %>

    <div class="container-fluid color-fondo">
        <div class="row">
            <div class="col-12 col-lg-5 mt-1">
                <h3>Mi cuenta</h3>
                    <div class="form-group rectangulos">
                        <form action="#" method="POST"></form>
                        <label for="">Email</label>
                        <input type="emailLogin" class="form-control shadow p-3 mb-3 bg-white rounded" name="emailLogin" aria-describedby="emailHelp">
                        <label for="">Contraseña</label>
                        <input type="passwordLogin" class="form-control shadow p-3 mb-3 bg-white rounded" name="passwordLogin">
                    </form>
                </div>
                <button type="submit" class="btn btn-dark btn-validar">Ingresar</button>
            </div>

            <div class="col-12 col-lg-6 mb-4 ficha">
                <form action="#" class="mt-1" method="POST">
                    <h3>Registro</h3>
                    <div class="form-group rectangulos">
                        <label for="">Nombre</label>
                        <input type="name" class="form-control shadow p-3 mb-3 bg-white rounded" name="name">
                    </div>
                    <div class="form-group rectangulos">
                        <label for="">Apellido</label>
                        <input type="lastName" class="form-control shadow p-3 mb-3 bg-white rounded" name="lastName">
                    </div>
                    <div class="form-group rectangulos">
                        <label for="">Email</label>
                        <input type="email" class="form-control shadow p-3 mb-5 bg-white rounded" name="email" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted ejemplo-mail">ejemplo@hotmail.com</small>
                    </div>
                    <div class="form-group rectangulos">
                        <label for="">Contraseña</label>
                        <input type="password" class="form-control shadow p-3 mb-3 bg-white rounded" name="password">
                    </div>
                    <div class="form-group rectangulos">
                        <label for="">Confirmar contraseña</label>
                        <input type="passwordConfirm" class="form-control shadow p-3 mb-3 bg-white rounded" name="passwordConfirm">
                        </div>
                    <button type="submit" class="btn btn-dark btn-validar">Crear cuenta</button>
                </form>
            </div>
        </div>
    </div>
    
    <!-- footer -->

    <%- include('partials/footer.ejs') %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>